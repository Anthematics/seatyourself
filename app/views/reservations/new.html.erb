<h1> Make a reservation</p>

  <%= form_for  :post, url: restaurant_seating_reservations_path  do |f| %>
  <% if @reservation.errors.any? %>
    <% @reservation.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :party_size %>
    <%= f.text_field :party_size %>
  </p>
    <%= f.submit %>
  <% end %>
