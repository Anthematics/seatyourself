<%= form_for restaurant do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :cuisine_style %>
  <%= f.text_field :cuisine_style %>
</p>
<p>
  <%= f.label :price_range %>
  <%= f.text_field :price_range %>
</p>
<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
</p>
<p>
  <%= f.label :address %>
  <%= f.text_field :address %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :capacity %>
  <%= f.text_field :capacity %>
</p>
<p>
  <%= f.label :seating_times %>
  <%= f.text_area :seating_times, placeholder: "hours separated by commas (no spaces), like this: 6,7,8,9 ", rows: 3, columns:30%>
</p>

  <%= f.submit %>
<% end %>
